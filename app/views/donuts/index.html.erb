<p id="notice"><%= notice %></p>

<h1>Listing Donuts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Ad copy</th>
      <th>Released</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @donuts.each do |donut| %>
      <tr>
        <td><%= donut.name %></td>
        <td><%= donut.ad_copy %></td>
        <td><%= donut.released %></td>
        <td><%= link_to 'Show', donut %></td>
        <td><%= link_to 'Edit', edit_donut_path(donut) %></td>
        <td><%= link_to 'Destroy', donut, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

